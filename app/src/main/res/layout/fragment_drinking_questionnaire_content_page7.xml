<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="test"
            type="org.techtown.handtxver1.DrinkingQuestionnaireContentPage7" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="지난 1년간 음주 후 술 마신 것에 대해 후\n회한 적이 있습니까?"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_pages_radio_button_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:text="전혀 없다"
                android:textColor="@drawable/questionnaire_pages_radio_button_color_selector"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_pages_radio_button_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:text="한 달에 1회 이하"
                android:textColor="@drawable/questionnaire_pages_radio_button_color_selector"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_pages_radio_button_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:text="한 달에 1회 정도"
                android:textColor="@drawable/questionnaire_pages_radio_button_color_selector"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_pages_radio_button_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:text="일주일에 1회 정도"
                android:textColor="@drawable/questionnaire_pages_radio_button_color_selector"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/questionnaire_pages_radio_button_selector"
                android:button="@android:color/transparent"
                android:checked="false"
                android:gravity="center"
                android:onClick="onRadioButtonClicked"
                android:text="거의 매일"
                android:textColor="@drawable/questionnaire_pages_radio_button_color_selector"
                android:textSize="15dp"
                android:textStyle="bold" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
