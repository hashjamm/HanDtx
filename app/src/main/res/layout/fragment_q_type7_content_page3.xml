<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="test"
            type="org.techtown.handtxver1.org.techtown.handtxver1.questionnaires.type7.QType7ContentPage3" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="당신은 30분 이상 심장박동이 증가하고\n평상시 보다 숨이 찬 중간 강도의 운동을\n1주일에 보통 몇 회나 하고 계십니까?"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/radioButtonsBackground"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_margin="30dp"
                android:background="@drawable/circular_radio_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/circleAnchor"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="0"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="0"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="0"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="45"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="45"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="2"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="90"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="90"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="3"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="135"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="135"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="4"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="180"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="180"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="5"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="225"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="225"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="6"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="270"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="270"
                app:layout_constraintCircleRadius="100dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="7"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="315"
                app:layout_constraintCircleRadius="130dp" />

            <RadioButton
                android:id="@+id/button8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/questionnaire_pages_circle_radio_button_selector"
                android:button="@null"
                app:layout_constraintCircle="@id/circleAnchor"
                app:layout_constraintCircleAngle="315"
                app:layout_constraintCircleRadius="100dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
